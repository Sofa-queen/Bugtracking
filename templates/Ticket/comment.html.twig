
{% extends 'base.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
  <div align="center">
    <h1>Comment on the {{ tick.name }}</h1>
    <div> 
       {% for comment in tick.comments %}
         <br>
         <p style=" font-weight: bold;  margin: 0px 200px 0px 0px; font-style: italic;">{{ comment.creator.username}} : </p>{{ comment.text }}
            {% if is_granted('ROLE_USER_' ~ comment.creator.id) or is_granted('ROLE_ADMIN') %} 
            <button style="margin: 0px 0px 0px 20px" type="button" class="btn btn-outline-dark" onclick="location.href='{{ path('delete_com', {'tick_id':tick.id, 'id':comment.id}) }}'">Delete</button> <br>
         {% endif %}
       {% endfor %}
    </div>
    <br>
    <button type="submit" onclick="location.href='{{ path('newcomment', {'id':tick.id}) }}'" class="btn btn-success">Add comment</button>
  </div>
<div><button type="button" style="margin: 10px 0px 0px 1150px"  onclick="location.href='{{ path('ticket', {'id':tick.id}) }}'" class="btn btn-secondary">Back</button><div>
{% endblock %}



{% extends 'base.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
  <div align="center">
    <h1>Comment on the {{ tick.name }}</h1>
    <div> 
       {% for comment in comment %}
         <br> {{ comment.text }}  <button style="margin: 0px 0px 0px 20px" type="button" class="btn btn-outline-dark" onclick="location.href='{{ path('delete_com', {'id':comment.id}) }}'">Delete</button> <br>
       {% endfor %}
    </div>
    <br>
    <button type="submit" onclick="location.href='{{ path('newcomment', {'id':tick.id}) }}'" class="btn btn-success">Add comment</button>
  </div>

{% endblock %}


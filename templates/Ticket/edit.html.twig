{# templates/Project/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Ticket{% endblock %}

{% block body %}
  <div align="center">
    <h1>Edit Ticket</h1>
    <p>{{ name }}</p>

    {#{ form ( form ) }#}
     {{ form_start ( form ) }}
      <div>
         {{ form_errors ( form ) }}
      </div >
      <div>
              {{ form_label ( form.name , ' Name' ) }}<br>
              {{ form_widget ( form.name , { 'attr' : { 'class' : 'task_field' }} ) }}
       </ div >
       <div>
             <br> {{ form_label ( form.type , ' Type' ) }}<br>
              {{ form_widget ( form.type , { 'attr' : { 'class' : 'task_field' }} ) }}
       </ div >
       <div>
             <br>{{ form_label ( form.status , ' Status' ) }}<br>
              {{ form_widget ( form.status , { 'attr' : { 'class' : 'task_field' }} ) }}
       </ div >
       <div>
             <br> {{ form_label ( form.addressee , ' Addressee' ) }} <br>
              {{ form_widget ( form.addressee , { 'attr' : { 'class' : 'task_field' }} ) }}
       </ div >

     {{ form_end ( form ) }}
     <br><br>
    <button type="submit" class="btn btn-success">Send</button>
  </div>

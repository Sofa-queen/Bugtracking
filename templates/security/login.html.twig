{% extends 'base.html.twig' %}
{% block title %}Log in!{% endblock %}

{% block body %}
 {% block header %} {% endblock %}

<div style="margin: 30px 0px 0px 30px"><button onclick="location.href='{{ path('user_registration') }}'" type="button" class="btn btn-warning">Registration</button></div>

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
 <div style="margin: 40px 0px 20px 0px; color: #D3D3D3; background:#4f5154; padding: 15px 30px"  >
   {# <h1 class="h3 mb-3 font-weight-normal"  align="center">Please sign in</h1>#}
   <div style="margin: 5px 0px 2px 500px">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputUsername">Name</label>
    <br>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" {#class="form-control"#} placeholder="enter the name" autofocus>
    <br>
    <br>
    <label for="inputPassword">Password</label>
    <br>
    <input type="password" name="password" id="inputPassword" {#class="form-control"#} placeholder="enter the password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
   <div style="margin: 15px 0px 2px 65px">
    <button class="btn btn-success" type="submit">
       Sing in
    </button>
  </div>
 </div>
 </div>
</form>
{% endblock %}

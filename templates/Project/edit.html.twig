{% extends 'base.html.twig' %}

{% block title %}Edit project{% endblock %}

{% block body %}
  <div align="center">
    <h1>Edit project</h1>
   <p>{{ name }}</p>
     {{ form_start ( form ) }}
      <div>
         {{ form_errors ( form ) }}
      </div >
      <div>
              {{ form_label ( form.name_proj , ' Name' ) }}
              {{ form_widget ( form.name_proj , { 'attr' : { 'class' : 'task_field' }} ) }}
       </ div >
     {{ form_end ( form ) }}

    <button type="submit" class="btn btn-success">Отправить</button>
  </div>
{% endblock %}

